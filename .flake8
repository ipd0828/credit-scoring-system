[flake8]
exclude = 
    venv,
    .venv,
    env,
    .env,
    __pycache__,
    .git,
    .pytest_cache,
    .mypy_cache,
    .coverage,
    htmlcov,
    dist,
    build,
    *.egg-info,
    .tox,
    .nox,
    .streamlit,
    mlruns,
    models,
    monitoring/reports,
    DATA_OUT
max-line-length = 88
extend-ignore = E203, W503
